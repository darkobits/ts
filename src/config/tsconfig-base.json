{
  "extends": "@darkobits/ts/tsconfig.json",
  "compilerOptions": {
    "jsx": "react",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    // Lots of TS errors
    "skipLibCheck": true,
    "esModuleInterop": true,
    "plugins": [
      {"name": "typescript-styled-plugin"},
      {"transform": "@zerollup/ts-transform-paths"}
    ]
  }
}
